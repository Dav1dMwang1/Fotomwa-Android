<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/custom_ripple"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="45dp"
    android:orientation="horizontal"
    android:transitionName="@string/transition_string">

    <TextView
        android:id="@+id/brand_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/order_list_margin"
        android:minWidth="120dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/brand_name_text"
        android:textSize="@dimen/order_list_text" />

    <TextView
        android:id="@+id/product_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/order_list_margin"
        android:minWidth="100dp"
        app:layout_constraintLeft_toRightOf="@id/brand_name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.3"
        android:text="@string/product_name_text"
        android:textSize="@dimen/order_list_text" />

    <ImageView
        android:id="@+id/order_list_view_icon"
        android:layout_width="@dimen/order_list_view_icon"
        android:layout_height="@dimen/order_list_view_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/ic_view"
        android:layout_margin="@dimen/order_list_margin"
        android:contentDescription="@string/order_view_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>
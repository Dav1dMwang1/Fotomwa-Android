<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/order_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/order_type_text"
        android:textSize="@dimen/order_list_text" />

    <TextView
        android:id="@+id/order_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/order_size_text"
        android:textSize="@dimen/order_list_text" />

    <ImageView
        android:id="@+id/order_list_view_icon"
        android:layout_width="@dimen/order_list_view_icon"
        android:layout_height="@dimen/order_list_view_icon"
        android:src="@drawable/ic_view"
        android:layout_margin="8dp"
        android:contentDescription="@string/order_view_icon" />

</LinearLayout>